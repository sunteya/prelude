<!DOCTYPE html>
<html>
<head>
  <title>Prelude</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <%= yield :head %>
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Prelude", root_path, class: 'navbar-brand' %>
    </div>

    <% if current_user %>
      <% if can? :manage, :admin %>
        <ul class="nav navbar-nav">
          <li class=""><%= link_to "用户管理", users_path %></li>
          <li class=""><%= link_to "客户端管理", clients_path %></li>
          <li class=""><%= link_to "域名组管理", domain_sets_path %></li>
        </ul>
      <% end %>

      <ul class="nav navbar-nav pull-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span><%= current_user.email %></span>
            <b class="caret" ></b>
            <i class="glyphicon glyphicon-user"></i>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to "修改密码", edit_user_path(current_user, ok_url: request.url) %>
            </li>
            <li class=""><%= link_to '注销', destroy_user_session_path, method: 'delete' %></li>
          </ul>
        </li>
      </ul>
    <% end %>
  </div>
</div>

<div class="container">
  <% flash.each do |code| %>
  <div class="alert alert-success fade in">
    <a class="close" data-dismiss="alert">×</a>
    <%= flash[code[0]] %>
  </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
